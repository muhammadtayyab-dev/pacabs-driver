<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="titleStyle" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">14sp</item>
        <item name="fontFamily">@font/quicksand_regular</item>
        <item name="android:textColor">@color/colorBlackLight</item>
    </style>

    <style name="headlingStyle" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">@font/quicksand_regular</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:textStyle">bold</item>
        <item name="colorAccent">@color/colorBlack</item>
    </style>

    <style name="buttonStyle" parent="Widget.AppCompat.Button">
        <item name="android:textSize">14sp</item>
        <item name="fontFamily">@font/quicksand_regular</item>
        <item name="textAllCaps">false</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_height">@dimen/_35sdp</item>
        <item name="android:textColor">@color/colorBlack</item>
    </style>

    <style name="editTextStyle" parent="Widget.AppCompat.EditText">
        <item name="fontFamily">@font/quicksand_regular</item>
        <item name="backgroundTint">@android:color/transparent</item>
        <item name="android:paddingStart">@dimen/_15sdp</item>
        <item name="android:textColor">@color/colorBlackLight</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_height">@dimen/_35sdp</item>
    </style>

    <style name="ToggleButton" parent="@android:style/Widget.CompoundButton.RadioButton">
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/_35sdp</item>
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">@font/quicksand_regular</item>
        <item name="android:textColor">@color/selector_marker_text</item>
        <item name="android:background">@drawable/toogle_background</item>
        <item name="android:button">@null</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:paddingRight">8dp</item>
    </style>

    <style name="tabTextStyle" parent="Widget.Design.TabLayout">
        <item name="tabBackground">@android:color/transparent</item>
        <item name="tabIndicatorColor">@color/colorBlack</item>
        <item name="tabSelectedTextColor">@color/colorBlack</item>
        <item name="tabTextColor">@color/colorBlackLight</item>
        <item name="tabTextAppearance">@style/TabText</item>
    </style>

    <style name="TabText" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">14sp</item>
        <!--Here below-->
        <item name="android:fontFamily">@font/quicksand_regular</item>
    </style>

    <style name="myEditText" parent="Widget.AppCompat.EditText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/_35sdp</item>
        <item name="android:background">@drawable/edittext_white_border_bg</item>
        <item name="android:paddingStart">@dimen/_15sdp</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/quicksand_regular</item>
    </style>

    <style name="Widget.BottomNavigationView"
        parent="Widget.Design.BottomNavigationView">
        <item name="fontFamily">@font/quicksand_regular</item>
        <item name="textSize">12sp</item>
    </style>

    <style name="tab_text" parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="android:fontFamily">@font/quicksand_regular</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="ToolbarTheme" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:fontFamily">@font/quicksand_regular</item>
        <item name="android:textSize">14sp</item>
    </style>


</resources>