<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent">

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:clipToPadding="false"
        android:paddingBottom="@dimen/_50sdp"
        android:scrollbars="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:weightSum="2">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@color/colorPrimary"
                android:orientation="vertical"
                android:padding="@dimen/_10sdp">

                <TextView
                    style="@style/titleStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:text="@string/signup_with_n_phone_number"
                    android:textAlignment="textStart"
                    android:textColor="@color/colorBlack"
                    android:textSize="22sp" />

                    <CheckBox
                        android:id="@+id/driverRb"
                        android:layout_marginTop="@dimen/_10sdp"
                        style="@style/headlingStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@color/colorBlack"
                        android:text="@string/driver" />

                    <CheckBox
                        style="@style/headlingStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/single_cab_owner" />

                    <CheckBox
                        style="@style/headlingStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Multi Cab Owner" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:padding="@dimen/_10sdp">

                <EditText
                    android:id="@+id/emailEd"
                    style="@style/myEditText"
                    android:layout_width="match_parent"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:background="@drawable/edittext_white_border_bg"
                    android:hint="@string/email_format"
                    android:imeOptions="actionNext"
                    android:inputType="textEmailAddress"
                    android:maxLength="30" />

                <EditText
                    android:id="@+id/numberEd"
                    style="@style/myEditText"
                    android:layout_width="match_parent"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:digits="@string/number_only_digits"
                    android:hint="@string/enter_mobile_number"
                    android:imeOptions="actionDone"
                    android:inputType="numberDecimal"
                    android:maxLength="20" />

                <Button
                    android:id="@+id/signupBtn"
                    style="@style/buttonStyle"
                    android:layout_width="match_parent"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:background="@drawable/button_selector_black"
                    android:text="SIGNUP"
                    android:textColor="@color/colorWhite" />
            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>